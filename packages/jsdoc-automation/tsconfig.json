{
    "compilerOptions": {
        "target": "ESNext",
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}